{
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "main.py", "use": "@vercel/python" }
  ],
  "rewrites": [
    {
      "source": "/api/now-playing",
      "destination": "/api/index"
    },
    {
      "source": "/auth/:path*",
      "destination": "/main"
    },
    {
      "source": "/tasks/:path*",
      "destination": "/main"
    },
    {
      "source": "/share/:path*",
      "destination": "/main"
    },
    {
      "source": "/feed",
      "destination": "/main"
    },
    {
      "source": "/",
      "destination": "/main"
    }
  ]
}
